{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "alwaysStrict": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
