{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": false, // Should not have sourcemaps
		"declaration": true, // Should have to support typings
		"outDir": "./dist",
		"skipLibCheck": true,
		"importHelpers": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/demo.ts"]
}
