{
	"name": "read-vietnamese-number",
	"version": "2.0.2",
	"description": "Đọc số thành chữ trong Tiếng Việt",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tonghoangvu/read-vietnamese-number.git"
	},
	"author": {
		"name": "Vu Tong",
		"email": "tonghoangvu@outlook.com",
		"url": "https://github.com/tonghoangvu"
	},
	"keywords": [
		"vn",
		"vietnam",
		"vietnamese",
		"convert",
		"read",
		"number",
		"digit",
		"text",
		"language",
		"rvn",
		"vnd",
		"currency",
		"money"
	],
	"files": [
		"dist"
	],
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"types": "./dist/cjs/index.d.ts",
	"main": "./dist/cjs/index.js",
	"scripts": {
		"deploy:check": "npm run prettier && npm run eslint && npm run jest",
		"deploy:build": "npm run clean && npm run build:cjs && npm run build:esm",
		"deploy:dry-run": "npm publish --dry-run && npm pack -q",
		"deploy:publish": "echo Run 'npm version' and 'npm publish' manually.",
		"prettier": "prettier --check .",
		"eslint": "eslint --max-warnings 0 .",
		"jest": "jest",
		"clean": "del-cli dist/ coverage/ *.tgz",
		"build:cjs": "tsc -p tsconfig.cjs.json && cp-cli ./package-cjs.json ./dist/cjs/package.json",
		"build:esm": "tsc -p tsconfig.esm.json",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@jest/globals": "^29.4.2",
		"@typescript-eslint/eslint-plugin": "^5.10.2",
		"@typescript-eslint/parser": "^5.10.2",
		"cp-cli": "^2.0.0",
		"del-cli": "^5.0.0",
		"eslint": "^8.8.0",
		"eslint-config-prettier": "^8.3.0",
		"husky": "^8.0.3",
		"jest": "^29.4.2",
		"lint-staged": "^13.1.2",
		"prettier": "^2.5.1",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.5.5"
	}
}
